@{
    ViewData["Title"] = "Home Page";

}

<h1>Upload Files</h1>

<div class="row">
    <section>
        <form method="post" enctype="multipart/form-data"
              asp-controller="Categories" asp-action="FileUpload">

            <div class="form-group">

                <div class="col-md-10">

                    <p>Upload image using this form:</p>

                    <input type="file" name="files" multiple/>

                </div>
            </div>

            <div class="form-group">

                <div class="col-md-10">

                    <input type="submit" value="Upload"/>

                </div>

            </div>

        </form>

    </section>

</div>