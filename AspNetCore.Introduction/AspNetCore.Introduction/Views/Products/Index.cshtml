@model IEnumerable<AspNetCore.Introduction.Models.Products>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-controller="Products" asp-action="Index">
    <p>
        Title: <input type="text" name="searchString">
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Category.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discontinued)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.QuantityPerUnit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Supplier.CompanyName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReorderLevel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsOnOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitsInStock)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(itemItem => item.Category.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.ProductName)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.Discontinued)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.QuantityPerUnit)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.Supplier.CompanyName)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.ReorderLevel)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.UnitsOnOrder)
            </td>
            <td>
                @Html.DisplayFor(itemItem => item.UnitsInStock)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.CategoryId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
